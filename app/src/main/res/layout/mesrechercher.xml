<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="match_parent"
            android:paddingBottom="100dp">
            <ImageView
                android:id="@+id/img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_find_in_page_black_24dp"/>
            <TextView
                android:id="@+id/txt1"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Aucunes recherches sauvegardées"
                android:layout_below="@id/img"
                android:textColor="#000"
                android:textSize="22dp"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt1"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_check_black_24dp"/>
            <TextView
                android:id="@+id/txt2"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exécuter les recherches une nouvelle fois."
                android:layout_below="@id/txt1"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/img1"
                android:gravity="center"
                android:textColor="#000"/>
            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt2"
                android:layout_marginLeft="50dp"
                android:src="@drawable/ic_check_black_24dp"/>
            <TextView
                android:id="@+id/txt3"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Me notifier des nouvelles offres."
                android:layout_below="@id/txt2"
                android:layout_toEndOf="@id/img2"
                android:gravity="center"
                android:textColor="#000"/>
            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt3"
                android:layout_marginLeft="50dp"
                android:src="@drawable/ic_check_black_24dp"/>
            <TextView
                android:id="@+id/txt4"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Se connecter pour accéder à vos recherches sauvegardées sur tous les supports."
                android:layout_below="@id/img2"
                android:layout_toEndOf="@id/img2"
                android:textColor="#000"/>
            <Button
                android:id="@+id/btnlogin"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connection"
                android:layout_below="@id/txt4"
                android:textColor="@color/textcherche"
                android:onClick="login"
                android:textStyle="bold"
                android:background="@drawable/buttonrec"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>