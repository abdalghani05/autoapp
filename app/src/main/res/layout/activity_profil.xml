<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profil">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/profile">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/carpro" />
            </RelativeLayout>
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:padding="16dp"
                    android:textSize="16dp"
                    android:textColor="@color/motdepasse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom : "/>
                <TextView
                    android:id="@+id/txtnom"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:padding="16dp"
                    android:textSize="16dp"
                    android:textColor="@color/motdepasse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prénom : "/>
                <TextView
                    android:id="@+id/txtprenom"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:padding="16dp"
                    android:textSize="16dp"
                    android:textColor="@color/motdepasse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail : "/>
                <TextView
                    android:id="@+id/txtemail"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:layout_marginTop="30dp">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Déconnecter"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:id="@+id/button7"
                                android:background="@drawable/buttoncree"
                                android:textColor="@color/motdepasse"
                                android:onClick="deconnecter"
                                android:layout_marginRight="10dp"
                                android:layout_column="2"
                                android:layout_weight="1"/>
                            <Button
                                android:foreground="?android:attr/selectableItemBackground"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Changer Mot de passe"
                                android:id="@+id/button9"
                                android:textColor="#fff"
                                android:onClick="changerpassword"
                                android:background="@drawable/buttonhover"
                                android:layout_column="2"
                                android:layout_weight="1" />
                        </TableRow>

                    </TableLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
/></LinearLayout>